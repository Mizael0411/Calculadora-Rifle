    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jFrame1.setSize(500, 400);
        jFrame1.setLocationRelativeTo(null);
        jFrame1.setVisible(true);


    }                                        
//lê as cargas dadas pelo usuario de q1 à q4, e lança uma janela caso o usuario tenha digitado um numero indevido 
    private void Valorq1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try {
           
            q1 = Double.parseDouble(Valorq1.getText());
            if (Math.abs(q1) > 1e12){
             javax.swing.JOptionPane.showMessageDialog(this, " Permitido apenas valores abaixo de 10^12 Um");   
            }
        } catch (NumberFormatException e) {
           javax.swing.JOptionPane.showMessageDialog(this, "Distância deve ser maior que zero.");
        }

    }                                       

