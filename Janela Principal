//abre uma janela explicando como funciona a calculadora, apos clicar no botao ajuda;
    private void abrirAjudaTexto() {
    try {
        File txtFile = new File("C:\\Users\\Windows 10\\Documents\\NetBeansProjects\\CalculadoraCampoEletrico\\src\\main\\java\\com\\mycompany\\calculadoracampoeletrico\\funcionamento.txt");

        if (!txtFile.exists()) {
            JOptionPane.showMessageDialog(this, "Arquivo de ajuda não encontrado.");
            return;
        }

        BufferedReader reader = new BufferedReader(new FileReader(txtFile));
        JTextArea area = new JTextArea();
        area.read(reader, null);
        area.setEditable(false);
        area.setLineWrap(true);
        area.setWrapStyleWord(true);

        JScrollPane scroll = new JScrollPane(area);
        scroll.setPreferredSize(new Dimension(600, 500));

        JFrame janelaAjuda = new JFrame("Como usar");
        janelaAjuda.getContentPane().add(scroll);
        janelaAjuda.pack();
        janelaAjuda.setLocationRelativeTo(this);
        janelaAjuda.setVisible(true);

    } catch (IOException e) {
        JOptionPane.showMessageDialog(this, "Erro ao abrir ajuda:\n" + e.getMessage());
    }
}
    private void perguntaActionPerformed(java.awt.event.ActionEvent evt) {                                         
   abrirAjudaTexto();

    }                                        
