// coleta o valor da distancia, e alerta os erros;
    private void distanciaActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String texto = distancia.getText().trim();

        if (texto.isEmpty()) {
            return; // nada digitado, não faz nada
        }

        try {
            int valor = Integer.parseInt(texto);
            if (valor <= 0) {
                JOptionPane.showMessageDialog(this, "Distância deve ser maior que zero.");
                return;
            }

            if (valor > 100) {
                JOptionPane.showMessageDialog(this, "Permitido apenas valores abaixo de 100.");
                return;
            }

            valordistancia.setValue(valor);
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Digite um número válido para a distância.");
        }

    


    }                                         

    private void valordistanciaStateChanged(javax.swing.event.ChangeEvent evt) {                                            

         valorD = valordistancia.getValue();
        distancia.setText(String.valueOf(valorD));

    }                                           
//efetua o calculo, usando a logica presente na classe Calculadora, na qual armazena todos o processo de calculo;
    private void efetuarcalculoActionPerformed(java.awt.event.ActionEvent evt) {                                               

        try {
            valorD = Integer.parseInt(distancia.getText().trim());

            if (valorD <= 0) {
                JOptionPane.showMessageDialog(this, "Distância deve ser maior que zero.");
                return;
            }

            if (valorD > 100) {
                JOptionPane.showMessageDialog(this, "Permitido apenas valores abaixo de 100.");
                return;
            }
        
        c  = new Calculadora(9e9, 1.6e-19,valorD);
        
        c.setCargas(q1, q2, q3, q4);

        
        q1 = Double.parseDouble(Valorq1.getText());
        q2 = Double.parseDouble(Valorq2.getText());
        q3 = Double.parseDouble(Valorq3.getText());
        q4 = Double.parseDouble(Valorq4.getText());
       c.setCargas(q1, q2, q3, q4);
       c.CalcularModulo();
            c.VerificarDirecao();
            
            double ex = c.getEx();
            double ey = c.getEy();
            double modulo = Math.sqrt(ex * ex + ey * ey);

// Mostra o resultado em uma janela
            String resultado = String.format("""
                                             Resultado do Campo El\u00e9trico no ponto P:
                                             Ex = %.2e N/C
                                             Ey = %.2e N/C
                                             M\u00f3dulo |E| = %.2e N/C""",
                    ex, ey, modulo);

            JOptionPane.showMessageDialog(this, resultado, "Resultado", JOptionPane.INFORMATION_MESSAGE);
       
  } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(this, "Por favor, preencha todos os valores corretamente.");
    }

    }                                              
//reseta os campos, para iniciar novos calculos;
    private void resetarCampos() {
        Valorq1.setText("");
        Valorq2.setText("");
        Valorq3.setText("");
        Valorq4.setText("");
        distancia.setText("");
        valordistancia.setValue(1); // valor mínimo permitido

        // Zera variáveis internas
        q1 = 0;
        q2 = 0;
        q3 = 0;
        q4 = 0;
        valorD = 1;

        // Zera o objeto calculadora (opcional)
        c = null;
    }
//botao resetar;
    private void resetarbuttonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        resetarCampos();
    }                                             



